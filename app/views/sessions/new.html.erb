<% object_name = controller_name.singularize %> 

<h1><%= t("views.#{object_name}.login") %></h1>
<%= form_with scope: :session, url: login_path, local: true do |f| %>
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <div class='form-group'>
        <%= f.label User.human_attribute_name :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label User.human_attribute_name :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :remember_me, class: 'checkbox inline' do %>
          <%= f.check_box :remember_me %>
          <span class='ml-1'><%= t('views.session.remember') %></span>
        <% end %>
      </div>

      <%= f.submit t('views.session.login'), class: 'btn btn-primary' %>

      <p><%= link_to t('views.user.new'), new_user_path %></p>
    </div>
  </div>
<% end %>
